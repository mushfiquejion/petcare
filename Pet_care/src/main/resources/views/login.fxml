<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1280.0" style="-fx-background-color: linear-gradient(to bottom right,#89f7fe,#66a6ff);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <!--  Title  -->
    <top>
        <HBox alignment="CENTER" prefHeight="108.0" prefWidth="582.0">
            <Label style="-fx-font-size:34px;-fx-font-weight:bold;                           -fx-text-fill:#2c3e50;-fx-padding:40 0 20 0;" text="🐾 Pet Care Login 🐾" />
        </HBox>
    </top>

    <!--  Center Form  -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TextField fx:id="emailField" prefHeight="11.0" prefWidth="1297.0" promptText="Enter Email" style="-fx-background-radius:10;-fx-padding:10;">
            <VBox.margin>
               <Insets />
            </VBox.margin></TextField>

            <PasswordField fx:id="passwordField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="37.0" promptText="Enter Password" style="-fx-background-radius:10;-fx-padding:10;" />

            <HBox alignment="CENTER" spacing="25">
                <Button onAction="#handleLogin" style="-fx-background-color:#0984e3;-fx-text-fill:white;                                -fx-font-size:16px;-fx-font-weight:bold;                                -fx-background-radius:25;-fx-padding:10 30;" text="Login" />
                <Button onAction="#goToSignup" style="-fx-background-color:#27ae60;-fx-text-fill:white;                                -fx-font-size:16px;-fx-font-weight:bold;                                -fx-background-radius:25;-fx-padding:10 30;" text="Sign Up" />
            </HBox>
        </VBox>
    </center>

    <!--  Footer  -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size:14px;-fx-font-weight:bold;-fx-text-fill:#2c3e50;" text="🐶 Adopt • 💉 Health • 🛒 Shop" />
        </HBox>
    </bottom>
</BorderPane>
