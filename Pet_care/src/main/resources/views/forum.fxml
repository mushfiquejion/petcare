<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1280.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForumController"> <!-- Light gray background -->

    <!-- LEFT BACK BUTTON -->
    <left>
        <VBox alignment="TOP_LEFT" style="-fx-padding: 20;">
            <Button onAction="#goBack" style="-fx-background-color:#3498db; -fx-text-fill:white;-fx-font-size:14px; -fx-font-weight:bold; -fx-background-radius:15; -fx-padding:8 15;" text="← Back" />
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15">

            <!-- POSTING WIDGET (Always fixed at the top) -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-radius: 10; -fx-max-width: 600;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Share Your Pet Moments" />
                <TextArea fx:id="postTextArea" maxWidth="580" prefHeight="60" promptText="What's on your mind?" style="-fx-background-radius: 8; -fx-border-color: #ccc;" />

                <HBox alignment="CENTER" spacing="15">
                    <Button onAction="#handleAttachPhoto" style="-fx-background-color:#f39c12; -fx-text-fill:white; -fx-background-radius: 8;" text="Attach Photo" />
                    <Button onAction="#handlePost" style="-fx-background-color:#27ae60; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius: 8;" text="Post Now" />
                </HBox>

                <Label fx:id="photoPathLabel" style="-fx-font-style: italic; -fx-font-size: 11px;" text="No photo attached." />
            </VBox>

            <!-- POSTS FEED (Scrollable Area) -->
            <ScrollPane fitToWidth="true" maxWidth="650" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox fx:id="postsContainer" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 0 10 0 10;" />
            </ScrollPane>

        </VBox>
    </center>

    <!-- Right Panel (For future chat/ads/trending if needed) -->
    <right>
        <VBox prefWidth="300" style="-fx-padding: 20; -fx-border-color: #ccc; -fx-border-width: 0 0 0 1;">
            <Label style="-fx-font-weight: bold;" text="🐾 Trending Pets" />
            <Label style="-fx-font-size: 10px;" text="Placeholder for Chat/Trends" />
        </VBox>
    </right>
</BorderPane>
