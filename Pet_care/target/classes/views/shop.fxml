<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1280.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShopController">
    <left>
        <VBox alignment="TOP_LEFT" style="-fx-padding: 20;">
            <Button onAction="#goBack" style="-fx-background-color:#3498db;..." text="← Back" />
        </VBox>
    </left>
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 20 10 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="🎁 Pet Accessories Shop 🎁" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#goToCart" style="-fx-background-color:#2980b9; -fx-text-fill:white;" text="View Cart" />
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 15;">
            <GridPane fx:id="accessoryGrid" hgap="15" vgap="15" />
        </ScrollPane>
    </center>
</BorderPane>
